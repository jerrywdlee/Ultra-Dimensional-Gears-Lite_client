<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %> - Edting Instrument</title>
  </head>
  <body>
  <h3>Editing DataBase On [ <%= title %> ]</h3>
  <form method="GET" action="/update_instr">
  	<table style="height:350px">
  		<tr>
  			<td>Can't Find Something?</td>
  			</td>
  			<td align="right">Please Try:
  			<button type="button" onclick="location.reload()">Reload</button>
  			</td>
  		</tr>
  		<tr style="background-color:#CCF;color:#24005b;font-size:1.08em">
  			<td>-----------------</td>
  			<td align="right">-----------------</td>
  		</tr>
  		<tr>
  			<td>Instrument Name:</td>
  			<td align="right"><input type="text" name="instr_name" id="instr_name" required="required" value="<%= instr_data.instr_name %>" /></td>
  		</tr>
  		<tr>
  			<td>MAC Address:</td>
  			<td align="right"><input type="text" name="mac_addr" id="mac_addr" value="<%= instr_data.mac_addr %>" /></td>
  		</tr>
  		<!--
  		<tr>
  			<td>Instrument Config:</td>
  			<td><input type="text" name="sensor_type" id="sensor_type" required="required"/></td>
  		</tr>
  	-->
  		<tr>
  			<td>Instrument Config:</td>
  			<td>
  				<select name="config" id="config" required="required" >
  						<!-- As a Placeholder -->
  						<!-- if no value="" ,required="required" will fail -->
              <!--
  						<option selected value="<%= instr_data.config %>">- Select Configurations -</option>
              -->
  						<!--<optgroup label="- Select Configurations -"></optgroup>-->
  						<% configs_list.forEach(function(config){ %>
                <% if(config === instr_data.config){ %>
                  <option selected><%= config %></option>
                <% }else{ %>
                  <option><%= config %></option>
                <% } %>
  						<% }) %>
  				</select>
  				<!--<input type="text" name="config" id="config" required="required" placeholder="DG_
  thermometer"/> -->
  			</td>
  		</tr>
      <tr>
        <td>Real Time?:</td>
        <td align="center"><input type="checkbox" name="real_time" id="real_time" <%= instr_data.real_time?'checked':'' %>/></td>
      </tr>
      <tr>
  			<td>Sample Freq:</td>
  			<td align="right"><input type="number" name="freq" id="freq" value="<%= instr_data.freq %>"/></td>
  		</tr>
      <tr>
  			<td>Keyword:</td>
  			<td align="right"><input type="text" name="keyword" id="keyword" value="<%= instr_data.keyword %>"/></td>
  		</tr>
      <tr>
        <td>Trigger:</td>
        <td align="right"><input type="text" name="trigger" id="trigger" value="<%= instr_data.trigger %>"/></td>
      </tr>
  		<tr>
            <td><button type="button" onclick="location.href='./upload_page'">Edit Configs</button></td>
            <td align="right"></td>
          </tr>
      <tr style="background-color:#CCF;color:#24005b;font-size:1.08em">
  			<td>-----------------</td>
  			<td align="right">-----------------</td>
  		</tr>
  		<tr>
  			<td align="left">
  			<button type="button" onclick="location.href='/set_db'">Edit DataBase</button>
  			</td>
  			<td align="right">
  			<!-- <input type="hidden" name="title" value="Instrument Added"/> -->
  				<input type="hidden" name="instr_id" value="<%= instr_data.id %>"/>
          <input type="hidden" name="title_next" value="Edit DataBase"/>
          <input type="hidden" name="jump_time" value="3000"/>
          <input type="hidden" name="href" value="./set_db"/>
  			<input type="submit" value="Save Changes"/>

  		</tr>
  	</table>
  </form>
  </body>
</html>
